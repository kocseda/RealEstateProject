@model EmlakProjesi.Models.Isyeri

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card bg-secondary shadow border-0">
                <div class="card-body px-lg-5 py-lg-5">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="IsyeriId" />
                        <div class="form-group focused">
                            <label asp-for="IsletmeAdi" class="form-control-label"></label>
                            <input asp-for="IsletmeAdi" class="form-control form-control-alternative" />
                            <span asp-validation-for="IsletmeAdi" class="text-danger"></span>
                        </div>
                        <div class="form-group focused">
                            <label asp-for="YetkiliAdi" class="form-control-label"></label>
                            <input asp-for="YetkiliAdi" class="form-control form-control-alternative" />
                            <span asp-validation-for="YetkiliAdi" class="text-danger"></span>
                        </div>
                        <div class="form-group focused">
                            <label asp-for="Adres" class="form-control-label"></label>
                            <input asp-for="Adres" class="form-control form-control-alternative" />
                            <span asp-validation-for="Adres" class="text-danger"></span>
                        </div>
                        <div class="form-group focused">
                            <label asp-for="PhoneNumber" class="form-control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control form-control-alternative" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary mt-4" type="submit">Kaydet</button>
                        </div>
                        <div>
                            <a asp-action="Index">Geri</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
