@model IEnumerable<EmlakProjesi.Models.Musteri>

@{
    ViewData["Title"] = "Müşteri Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header border-0">
                <div class="text-center" style="padding-bottom:15px; text-align:left!important;">
                    <a asp-action="Create"><button class="btn btn-primary mt-4" style="font-size:0.7rem; padding:0.54rem 1rem; border-radius:0.275rem;">Yeni</button></a>
                </div>
                <h3 class="mb-0">Müşteriler</h3>
            </div>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Isim)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SoyIsim)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PhoneNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Adres)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.OlusturmaTarihi)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Isim)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoyIsim)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Adres)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OlusturmaTarihi)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.MusteriId">Düzenle</a> |
                                    <a asp-action="Details" asp-route-id="@item.MusteriId">Detaylar</a> 
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>